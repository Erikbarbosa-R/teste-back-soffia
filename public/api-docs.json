      "put": {
        "summary": "Atualizar Post",
        "description": "Atualiza um post",
        "tags": ["Posts"],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post atualizado"
          }
        }
      },
      "delete": {
        "summary": "Deletar Post",
        "description": "Remove um post",
        "tags": ["Posts"],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
